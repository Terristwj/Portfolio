// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Guestbook {
  id          String    @id @default(uuid())
  message     String    // Max 191 characters
  username    String
  created_at  DateTime  @default(now())
}